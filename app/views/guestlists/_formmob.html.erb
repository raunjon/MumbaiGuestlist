<head xmlns="http://www.w3.org/1999/html">
  <meta name="viewport" content="height=device-height, width=device-width, user-scalable=0, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" >

  <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.1/css/datepicker.css" rel="stylesheet"/>
  <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.1/js/bootstrap-datepicker.js"></script>

</head>
<style type="text/css">

  .sbt input {
    background-image: url(images/GoButton.png);
  }
  html select{ width:60%; height:50%; font-size:14px; display: block; margin: 0 auto; text-align:center; }
  html:not(.browser-android) select { width:60%; height:9%; font-size:14px; display: block; border-color:#575a59; border-style:solid; border-width:6px; margin: 0 auto; text-align:center;
  }

</style>
<body class="bg1">
<div>
  <div class='header-error'>
    <% if @guestlist.errors.any? %>
        <ul>
          <% @guestlist.errors.full_messages.each do |msg| %>
              <li><%=msg%></li>
          <% end%>
        </ul>
    <% end%>
  </div>
  <div class="top">
    <div class="logo-mob"><%= image_tag("logo.png") %></div>

    <%= form_for(@guestlist, :html => { role: "form"}) do |f| %>
        <% if logged_in?%>
            <% username = current_user.name %>
            <% mobile = current_user.mobile%>
        <% end %>
        <div class="form-mob">
           <input type="text" placeholder="Title", value=<%=username%>/>
        </div>
        <div class="form-mob">
           <%= f.collection_select :club_id, Club.order(:title),:id,:title, include_blank: false, html_options:{:class => 'select-mob'} %>
        </div>
        <div class="form-mob">
          <%= f.text_field :entry_date, :id => 'datetimepicker', placeholder:"Date",autofocus:false %>
        </div>
        <div class="form-mob">
          <%= f.text_field :couples, class:"",placeholder:"Couples",autofocus:true %>
        </div>
        <div class="form-mob">
          <%= f.date_select :mobile, class:"",placeholder:"Mobile",autofocus:true, :value=>mobile %>
        </div>
        <div class="form-mob">
          <%= f.submit "Submit" %>
        </div>
    <% end %>
  </div>
  <%= link_to "Log Out  #{image_tag("logo.png")}", logout_path %>

</div>
</body>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker').datepicker({ startDate: "dateToday",
      format: 'dd-MM-yyyy' , daysOfWeekDisabled: [0,1,2,4], todayHighlight: true
    });
  });

</script>
