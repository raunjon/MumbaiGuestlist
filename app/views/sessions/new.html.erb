<div class="content">
  <%= form_for(:session, :html => {class: "form", role: "form"}, url: login_path) do |f| %>
      <h1 align="center">Login</h1>
      <div class="form-group">
      <%= f.label :username, class: "label"%>
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
  </div>
    <div class="form-group">
      <%= f.label :password, class: "label"%>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
    </div>
    <div class="">
      <%= f.submit "Log in", class: "btn btn-primary submit" %>
    </div>
      </div>
<% end %>