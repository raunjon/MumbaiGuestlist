<% if @user.errors.any? %>
    <h2>Errors</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
          <li><%=msg%></li>
      <% end%>
    </ul>
<% end%>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for([:admin, @user], :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :name %>
          </div>
          <div class='col-sm-8'>
            <%= f.text_field :name, class:"form-control",placeholder:"First name",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :username %>
          </div>
          <div class='col-sm-8'>
            <%= f.text_field :username, class:"form-control",placeholder:"Username",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :email %>
          </div>
          <div class='col-sm-8'>
            <%= f.email_field :email, class:"form-control",placeholder:"Email",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :password %>
          </div>
          <div class='col-sm-8'>
            <% if !@user.nil? && @user.provider=="facebook"%>
                 <%password = "facebook-provided-password"%>
                 <%= f.password_field :password, class:"form-control",placeholder:"Password",autofocus:true,:value=>password,:readonly => true %>
            <% else%>
                <%= f.password_field :password, class:"form-control",placeholder:"Password",autofocus:true %>
            <%end%>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :gender %>
          </div>
          <div class='col-sm-8'>
            <%= f.text_field :gender, class:"form-control",placeholder:"Gender",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :provider %>
          </div>
          <div class='col-sm-8'>
            <%= f.text_field :provider, class:"form-control",placeholder:"Provider",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :autoaccept %>
          </div>
          <div class='col-sm-8'>
            <%= f.check_box :autoaccept, class:"form-control",placeholder:"Auto Accept",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :admin %>
          </div>
          <div class='col-sm-8'>
            <%= f.check_box :admin, class:"form-control",placeholder:"Admin",autofocus:true %>
          </div>
        </div>

        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-10'>
            <%= f.submit class:'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to "Cancel Request and return to users listing", admin_users_path%>
    </div>

  </div>
</div>